{% extends 'innobisBundle::main.html.twig' %}

{% block title %}ReActive Users{% endblock %}

{% block body %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
	{{ include('innobisBundle:Default:menu.html.twig') }}
	<div class="container">
	  	<div class="col-md-offset-2 col-md-8">
	      	<div class="page-header margin-none">
	      		<h1 style="margin-top:100px">Usuarios</h1>
	      	</div>
		    <div class="table-responsive">
		      <table class="table table-striped table-hover">
		      	<thead>
			      	<tr>
						<th>#</th>
						<th>Nombre</th>
						<th>Apellido</th>
						<th>Correo</th>
					</tr>
				</thead>
				<tbody>
				{% for user in users %}
					<tr>
						<td>{{ loop.index }}</td>
						<td>{{ user.firstname }}</td>
						<td>{{ user.lastname }}</td>
						<td>{{ user.email }}</td>
					</tr>
				{% endfor %}
				</tbody>
		      </table>
		    </div>
		</div>
	</div>
{% endif %}
{% endblock %}